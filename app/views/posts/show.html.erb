<div>
  <div>
    <div>
      <h4> <%= @post.title %> by <%= @post.author.name %> </h4>
      <span>
        Comments: <%= @post.comments_counter %>, Likes: <%= @post.likes_counter %>
      </span>
    </div>
    <span> <%= @post.text %> </span>
  </div>
  <div>
    <%= render partial: 'comment_info', locals: { comments: @post.recent_comments } %>
  </div>
</div>