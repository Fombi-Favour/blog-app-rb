<section class="main-post">
  <div>
    <div>
      <%= render 'users/home' %>
      <%= render 'users/back' %>
    </div>
    <%= link_to 'New Post', new_user_post_path(@user.id) %>
  </div>
  <div>
    <%= render partial: 'users/user_info', locals: { person: @user } %>
  </div>

  <div>
    <% @posts.each do |post| %>
      <div>
        <%= render partial: 'post_info', locals: { person_post: post } %>
      </div>

      <div class="comment">
        <%= render partial: 'comment_info', locals: { comments: post.recent_comments } %>
      </div>
    <% end %>
  </div>

  <button class="btn-page"> Pagination </button>
</section>