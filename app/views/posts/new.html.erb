<%= render 'users/back' %>
<section>
  <h3>Create new post</h3>

  <%= form_with model: @post, url: user_posts_path, html: { class: 'form-post' }, local: true  do |form| %>
    <div>
      <%= form.label :title, 'title' %>
      <%= form.text_field :title, required: true %>
    </div>

    <%= form.text_area :text, placeholder: 'your post...', required: true %>
    <%= form.submit 'create', disable_with: 'loading...' %>
  <%end%>
</section>